<view class="container">
  <form bindsubmit='formSubmit' class='form'>
    <view class="input-list">
      <view class="input-item">
        <text class="input-item-label">学生学号</text>
        <view class="input-item-content">
          <input name="No" type="idcard" placeholder="请输入您的学号或工号" maxlength="10" bindinput="inputNo" value="{{No}}"></input>
        </view>
      </view>

      <view class="input-item">
        <text class="input-item-label">手机号码</text>
        <view class="input-item-content">
          <input name="Password" type="text" auto-focus placeholder="请输入您的密码" bindinput="inputPassword" value="{{Password}}"></input>
        </view>
      </view>
    </view>

    <view class="btn-submit">
      <button class="btn-block btn-orange" formType="submit">提交</button>
    </view>



    <view class="btn-submit">
      <navigator class="index-menu-item" url="excel input/excelin">
        <button class="btn-block btn-orange">
          Excel表导入</button>
      </navigator>
      </view>

  </form>
  </view>