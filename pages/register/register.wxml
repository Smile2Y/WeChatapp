<view class="container">
  <form bindsubmit='formSubmit' class='form'>
  	<view class="input-list">
  		<view class="input-item">
			<text class="input-item-label">学号/工号</text>
			<view class="input-item-content">
				<input name="No" type="idcard" placeholder="请输入您的学号或工号" maxlength="10" bindinput="inputNo" value="{{No}}"></input>
			</view>
		</view>
		<view class="input-item">
			<text class="input-item-label">姓名</text>
			<view class="input-item-content">
				<input name="Name" type="text" auto-focus placeholder="请输入您的姓名" bindinput="inputName" value="{{Name}}"></input>
			</view>
		</view>

    <view class="input-item">
			<text class="input-item-label">密码</text>
			<view class="input-item-content">
				<input name="Password" type="text" auto-focus placeholder="请输入您的密码" bindinput="inputPassword" value="{{Password}}"></input>
			</view>
		</view>

    <view class="input-item">
			<text class="input-item-label">电话号码</text>
			<view class="input-item-content">
				<input name="Tel" type="text" auto-focus placeholder="请输入您的电话号码" bindinput="inputTel" value="{{Tel}}"></input>
			</view>
		</view>

	</view>
  <view class="btn-submit">
		<button class="btn-block btn-orange" formType="submit" disabled="{{submited}}">注册</button>
	</view>
	<view class="btn-submit">
		<button class="btn-block btn-orange" bindtap="Login" disabled="{{submited}}">登录</button>
	</view>
  </form>

</view>
